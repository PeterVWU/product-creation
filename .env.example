# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Source Magento Configuration
SOURCE_MAGENTO_BASE_URL=https://your-source-magento.com
SOURCE_MAGENTO_TOKEN=your_source_admin_token_here

# Target Magento Configuration
TARGET_MAGENTO_BASE_URL=https://your-target-magento.com
TARGET_MAGENTO_TOKEN=your_target_admin_token_here
TARGET_MAGENTO_ADMIN_PATH=admin

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Concurrency Configuration
MAX_CONCURRENT_REQUESTS=5
MAX_IMAGE_SIZE_MB=10

# Migration Options
DEFAULT_INCLUDE_IMAGES=true
DEFAULT_CREATE_MISSING_ATTRIBUTES=true
DEFAULT_OVERWRITE_EXISTING=false

# Error Handling
CONTINUE_ON_ERROR=true

# Google Chat Notifications
GOOGLE_CHAT_ENABLED=false
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GOOGLE_CHAT_TIMEOUT=5000
