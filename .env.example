# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Source Magento Configuration
SOURCE_MAGENTO_BASE_URL=https://your-source-magento.com
SOURCE_MAGENTO_TOKEN=your_source_admin_token_here

# ===========================================
# TARGET MAGENTO STORES
# ===========================================
# Store credentials - add as many stores as needed
# Pattern: MAGENTO_STORE_<NAME>_URL and MAGENTO_STORE_<NAME>_TOKEN

# Example: ejuices store
MAGENTO_STORE_EJUICES_URL=https://www.ejuices.com/
MAGENTO_STORE_EJUICES_TOKEN=your_ejuices_admin_token

# Example: misthub store
MAGENTO_STORE_MISTHUB_URL=https://misthub.example.com/
MAGENTO_STORE_MISTHUB_TOKEN=your_misthub_admin_token

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Concurrency Configuration
MAX_CONCURRENT_REQUESTS=5
MAX_IMAGE_SIZE_MB=10

# Migration Options
DEFAULT_INCLUDE_IMAGES=true
DEFAULT_CREATE_MISSING_ATTRIBUTES=true
DEFAULT_OVERWRITE_EXISTING=false

# Error Handling
CONTINUE_ON_ERROR=true

# Google Chat Notifications
GOOGLE_CHAT_ENABLED=false
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GOOGLE_CHAT_TIMEOUT=5000

# ===========================================
# SHOPIFY CONFIGURATION
# ===========================================
# API version for all stores
SHOPIFY_API_VERSION=2025-01

# Default store name (used when no store specified in API call)
SHOPIFY_DEFAULT_STORE=wholesale

# Store credentials - add as many stores as needed
# Pattern: SHOPIFY_STORE_<NAME>_URL and SHOPIFY_STORE_<NAME>_TOKEN

# Example: wholesale store
SHOPIFY_STORE_WHOLESALE_URL=your-wholesale-store.myshopify.com
SHOPIFY_STORE_WHOLESALE_TOKEN=shpat_your_wholesale_token

# Example: retail store
SHOPIFY_STORE_RETAIL_URL=your-retail-store.myshopify.com
SHOPIFY_STORE_RETAIL_TOKEN=shpat_your_retail_token
